{% block extends %}
{{ "{% extends '" ~ bundle ~ "::fardus.crud.base.html.twig' %}" }}
{% endblock extends %}

{{'{% trans_default_domain "crud_common" %}'}}

{{"{% block contextualMenu %}"}}

{% if options.commons.action == 'button' %}
{{"
    <div class=\"btn-group\">
        <a href=\"{{ path('" ~ route_name_prefix ~ "') }}\" class=\"btn btn-sm btn-default{%if '" ~ route_name_prefix ~ "' == app.request.attributes.get('_route')%} active{% endif %}\">
            <span class=\"fa fa-list\"></span>
            {% trans %}list{% endtrans %}
        </a>
        <a href=\"{{ path('" ~ route_name_prefix ~ "_new') }}\" class=\"btn btn-sm btn-primary{%if '" ~ route_name_prefix ~ "_new' == app.request.attributes.get('_route')%} active{% endif %}\">
            <span class=\"fa fa-plus\"></span>
            {% trans with { '%entity%' : '" ~ entity ~ "'} %}new{% endtrans %}
        </a>
    </div>

    {% if " ~ entity|lower ~ " is defined and " ~ entity|lower ~ ".id %}
        <div class=\"btn-group\">
            <a class=\"btn btn-sm btn-default {%if '" ~ route_name_prefix ~ "_show' == app.request.attributes.get('_route')%} active{% endif %}\" href=\"{{ path('" ~ route_name_prefix ~ "_show', {'id': " ~ entity|lower ~ ".id}) }}\">
                <span class=\"fa fa-file-text-o\"></span>
                {% trans %}show{% endtrans %}
            </a>
            <a class=\"btn btn-sm btn-default {%if '" ~ route_name_prefix ~ "_edit' == app.request.attributes.get('_route')%} active{% endif %}\" href=\"{{ path('" ~ route_name_prefix ~ "_edit', {'id': " ~ entity|lower ~ ".id}) }}\">
                <span class=\"fa fa-pencil-square-o\"></span>
                {% trans %}edit{% endtrans %}
            </a>
            <a class=\"btn btn-sm btn-default {%if '" ~ route_name_prefix ~ "_delete' == app.request.attributes.get('_route')%} active{% endif %}\" href=\"{{ path('" ~ route_name_prefix ~ "_delete', {'id': " ~ entity|lower ~ ".id}) }}\">
                <span class=\"fa fa-trash-o\"></span>
                {% trans %}delete{% endtrans %}
            </a>
        </div>
    {% endif %}
"}}

{% elseif options.commons.action = 'dropdown' %}

{{ "
    <div class=\"btn-group\">
        <button type=\"button\" class=\"btn btn-danger {% if '" ~ route_name_prefix ~ "' == app.request.attributes.get('_route') %} active{% endif %}\">
            <a href=\"{{ path('" ~ route_name_prefix ~ "') }}\"><span class=\"fa fa-list\"></span> {% trans %}list{% endtrans %}</a>
        </button>
        <button type=\"button\" class=\"btn btn-danger dropdown-toggle\" data-toggle=\"dropdown\" aria-haspopup=\"true\" aria-expanded=\"false\">
            <span class=\"caret\"></span>
            <span class=\"sr-only\">Toggle Dropdown</span>
        </button>
        <ul class=\"dropdown-menu\">
            <li>
                <a href=\"{{ path('" ~ route_name_prefix ~ "') }}\" class=\"{% if '" ~ route_name_prefix ~ " == app.request.attributes.get('_route') %} active{% endif %}\">
                    <span class=\"fa fa-list\"></span>
                    {% trans %}list{% endtrans %}
                </a>
            </li>
            <li>
                <a href=\"{{ path('" ~ route_name_prefix ~ "_new') }}\" class=\"{% if '" ~ route_name_prefix ~ "_new' == app.request.attributes.get('_route') %} active{% endif %}\">
                    <span class=\"fa fa-plus\"></span>
                    {% trans with { '%entity%' : 'User'} %}new{% endtrans %}
                </a>
            </li>
            {% if " ~ entity|lower ~ " is defined and " ~ entity|lower ~ ".id %}
                <li role=\"separator\" class=\"divider\"></li>
                <li>
                    <a class=\"{% if '" ~ route_name_prefix ~ "_show' == app.request.attributes.get('_route') %} active{% endif %}\" href=\"{{ path('" ~ route_name_prefix ~ "_show', {'id': " ~ entity|lower ~ ".id}) }}\">
                    <span class=\"fa fa-file-text-o\"></span>
                    {% trans %}show{% endtrans %}
                    </a>
                </li>
                <li>
                    <a class=\"{% if '" ~ route_name_prefix ~ "_edit' == app.request.attributes.get('_route') %} active{% endif %}\" href=\"{{ path('" ~ route_name_prefix ~ "_edit', {'id': " ~ entity|lower ~ ".id}) }}\">
                        <span class=\"fa fa-pencil-square-o\"></span>
                        {% trans %}edit{% endtrans %}
                    </a>
                </li>
                <li>
                    <a class=\"{% if '" ~ route_name_prefix ~ "_delete' == app.request.attributes.get('_route') %} active{% endif %}\" href=\"{{ path('" ~ route_name_prefix ~ "_delete', {'id': " ~ entity|lower ~ ".id}) }}\">
                        <span class=\"fa fa-trash-o\"></span>
                        {% trans %}delete{% endtrans %}
                    </a>
                </li>
            {% endif %}
        </ul>
    </div>
" }}
{% endif %}

{{"{% endblock contextualMenu %}"}}